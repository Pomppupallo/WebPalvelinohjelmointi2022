<div id="<%= dom_id brewery %>">
  <p>
      <h2><%= brewery.name %></h2>
  </p>

  <p>
    <i>Established in: </i>
    <%= brewery.year %>
  </p>

  <p>
    <i>Beers count: </i>
    <%= brewery.beers.count%>
  <p>

  <p>
    <% brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
    <% end %>
  </p>
</div>
