<div id="<%= dom_id brewery %>">
  <p>
      <h2><%= brewery.name %></h2>
  </p>

  <p>
    <i>Established in: </i>
    <%= brewery.year %>
  </p>

  <p>
    <i>Beers count: </i>
    <%= brewery.beers.count%>
  <p>

  <p>
    <% brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
    <% end %>
  </p>

  <p>
    <% if brewery.ratings.empty? %>
        Brewery has not yet been rated!
        <% else %>
        Brewery has <%= brewery.ratings.count %> <%=brewery.pluralize_rating%> with an average of <%= brewery.average_rating %>
    <% end %>
  </p>

</div>
